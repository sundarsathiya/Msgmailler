<% @message.each do |c| %>
<tr>
<td><%= c.to %></td>
<td><%#= c.trash %></td>
<td><%= c.body[0..10].html_safe %></td>
<td><%= c.image %></td>
<td><%= link_to"restore", well_restore_path(c) %></td>
<td><%= link_to"remove", well_remove_path(c) , method: :delete,data: { confirm: 'Are you sure?' }%></td>
<td><%#= link_to"view",well_path(c) %></td>
 <td><%#= link_to "delete",well_path(c) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
</tr>
</table>
<%= link_to 'Back',  root_path %> 
